#!/usr/bin/env bash
set -e

# Install the project in editable mode so `src`-based imports resolve from notebooks.
python -m pip install --no-deps -e .

python - <<'PY'
# Ensure the Agg backend is available for headless rendering.
import matplotlib
matplotlib.use("Agg")
print("Binder postBuild: matplotlib backend set to Agg.")
PY
